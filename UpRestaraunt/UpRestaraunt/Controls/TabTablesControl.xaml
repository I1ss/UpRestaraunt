                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox Margin="5" Text="{Binding IdHall}" Grid.Row="0" Grid.Column="0" FontSize="16" MaxLength="16" 
