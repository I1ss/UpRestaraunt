                    </Grid>
                    <local:ButtonsControl Grid.Row="3" DataContext="{Binding }" Background="LightGray" />
                </Grid>
            </TabItem>
            <TabItem Header="Типы меню" DataContext="{Binding TypesMenuTableVM}" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Column="0" Grid.Row="0" Background="LightGray">
                        <TextBox Margin="15" FontSize="16" MaxLength="16" Text="{Binding Filter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Background="AliceBlue" BorderBrush="DimGray" VerticalAlignment="Center" x:Name="SearchTypeMenuBox" >
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="7"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBlock IsHitTestVisible="False" Text="Введите здесь название меню для поиска" VerticalAlignment="Center" 
                                   HorizontalAlignment="Left" Margin="20 0 0 0" Foreground="DarkGray">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchTypeMenuBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                    <DataGrid Grid.Row="1" ItemsSource="{Binding DataView}" ColumnWidth="*" BorderBrush="#B4B4B4" BorderThickness="1 0 1 1" 
                              SelectedItem="{Binding SelectedRow}" IsReadOnly="True" SelectionMode="Single" />
                    <Grid Grid.Row="2" Background="LightGray" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox Margin="5" Text="{Binding CountDishes}" Grid.Row="0" Grid.Column="0" FontSize="16" MaxLength="16" 
                                 Background="AliceBlue" BorderBrush="DimGray" VerticalAlignment="Center" />
                        <TextBox Margin="5" Text="{Binding Title}" Grid.Row="0" Grid.Column="1" FontSize="16" MaxLength="16" 
                                 Background="AliceBlue" BorderBrush="DimGray" VerticalAlignment="Center" />
                    </Grid>
                    <local:ButtonsControl Grid.Row="3" DataContext="{Binding }" Background="LightGray" />
                </Grid>
            </TabItem>
            <TabItem Header="Посещения" DataContext="{Binding VisitsTableVM}" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Column="0" Grid.Row="0" Background="LightGray">
                        <TextBox Margin="15" FontSize="16" MaxLength="16" Text="{Binding Filter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Background="AliceBlue" BorderBrush="DimGray" VerticalAlignment="Center" x:Name="SearchVisitsBox" >
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="7"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <TextBlock IsHitTestVisible="False" Text="Введите здесь Id клиента для поиска" VerticalAlignment="Center" 
                                   HorizontalAlignment="Left" Margin="20 0 0 0" Foreground="DarkGray">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchVisitsBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                    <DataGrid Grid.Row="1" ItemsSource="{Binding DataView}" ColumnWidth="*" BorderBrush="#B4B4B4" BorderThickness="1 0 1 1" 
                              SelectedItem="{Binding SelectedRow}" IsReadOnly="True" SelectionMode="Single" >
                    </DataGrid>
                    <Grid Grid.Row="2" Background="LightGray" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBox Margin="5" Text="{Binding TimeVisit}" Grid.Row="0" Grid.Column="0" FontSize="16" MaxLength="16" 
                                 Background="AliceBlue" BorderBrush="DimGray" VerticalAlignment="Center" />
                        <TextBox Margin="5" Text="{Binding IdClient}" Grid.Row="0" Grid.Column="1" FontSize="16" MaxLength="16" 
                                 Background="AliceBlue" BorderBrush="DimGray" VerticalAlignment="Center" />
                        <TextBox Margin="5" Text="{Binding IdEmployee}" Grid.Row="0" Grid.Column="2" FontSize="16" MaxLength="16" 
                                 Background="AliceBlue" BorderBrush="DimGray" VerticalAlignment="Center" />
                        <TextBox Margin="5" Text="{Binding IdTable}" Grid.Row="0" Grid.Column="3" FontSize="16" MaxLength="16" 
                                 Background="AliceBlue" BorderBrush="DimGray" VerticalAlignment="Center" />
                    </Grid>
                    <local:ButtonsControl Grid.Row="3" DataContext="{Binding }" Background="LightGray" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
